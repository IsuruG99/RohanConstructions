<ResourcesScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20
                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05
                        GridLayout:
                                cols: 2
                                spacing: 10
                                size_hint: 0.3, 1
                                RButton4:
                                        text: 'Refresh'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        id: resource_filter
                                        text: 'Filter: All'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)
                        CLabel:
                                text: 'Resources'
                                size_hint: 0.4, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10
                                RText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.7, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Search'
                                        size_hint: 0.3, 1
                                        on_release: root.search_res(search.text)
                GridLayout:
                        rows: 3
                        size_hint: 1, 0.95
                        spacing: 10
                        GridLayout:
                                size_hint: 1, 0.1
                                id: resource_headers
                                rows: 1
                                height: 50
                        ScrollView:
                                size_hint: 1, 0.8
                                do_scroll_x: False
                                GridLayout:
                                        id: resources_list
                                        size_hint_y: None
                                        height: self.minimum_height
                                        cols: 1
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                        GridLayout:
                                rows: 1
                                cols: 2
                                spacing: 20
                                size_hint: 1, 0.1
                                RButton4:
                                        text: 'Add'
                                        size_hint: 0.6, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        text: 'Back'
                                        size_hint: 0.4, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<ViewResource>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 10
                GridLayout:
                        cols: 4
                        rows: 3
                        spacing: 10
                        size_hint: 1, 0.35
                        CLabel:
                                text: 'Material'
                                size_hint: 0.3, 1
                        RText:
                                id: viewPop_name
                                multiline: False
                                hint_text: 'Stone'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Quantity'
                                size_hint: 0.3, 1

                        RText:
                                id: viewPop_qty
                                multiline: False
                                hint_text: '10'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Supplier'
                                size_hint: 0.3, 1

                        RAutoFillText:
                                id: viewPop_supplier
                                size_hint: 0.7, 0.1
                                hint_text: 'XYZ Suppliers'
                                completions: root.load_suppliers()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Cost'
                                size_hint: 0.3, 1
                        RText:
                                id: viewPop_cost
                                multiline: False
                                hint_text: '15000'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Status'
                                size_hint: 0.3, 1
                        RSpinner:
                                id: viewPop_status
                                text: 'In Stock'
                                values: ['In Stock', 'Out of Stock']
                                size_hint: 0.7, 1

                GridLayout:
                        cols: 1
                        rows: 4
                        size_hint: 1, 0.6
                        spacing: 10

                        CLabel:
                                text: 'Assignments'
                                size_hint: 1, 0.1

                        GridLayout:
                                rows: 1
                                cols: 4
                                size_hint: 1, 0.15
                                spacing: 10
                                RAutoFillText:
                                        id: projectList
                                        text: ''
                                        hint_text: 'Project Name'
                                        size_hint_x: 0.4
                                        completions: root.load_projects()
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RText:
                                        id: projectQty
                                        hint_text: '10'
                                        size_hint_x: 0.1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: '+'
                                        size_hint_x: 0.1
                                        on_release: root.reload(projectQty.text, projectList.text, "Add", self)
                                RButton4:
                                        text: '-'
                                        size_hint_x: 0.1
                                        on_release: root.reload(projectQty.text, projectList.text, "Subtract", self)

                        ScrollView:
                                size_hint: 1, 0.6
                                spacing: 10
                                GridLayout:
                                        id: viewRes_projects
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos
                        GridLayout:
                                cols: 3
                                size_hint: 1, 0.15
                                spacing: 10
                                RButton4:
                                        text: 'Edit'
                                        on_release:
                                                root.editRes(requestType="Validate")
                                RButton4:
                                        text: 'Delete'
                                        on_release: root.deleteRes(requestType="Validate")

                                RButton4:
                                        text: 'Report'
                                        on_release: root.reportRes()

<AddResource>:
        # name, qty, supplier, cost, (spinner)status
        GridLayout:
                cols: 1
                rows: 3
                size: root.size
                pos: root.pos
                padding: 20
                GridLayout:
                        cols: 2
                        rows: 6
                        spacing: 10
                        size_hint: 1, 0.85

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 1
                        RText:
                                id: addRes_name
                                hint_text: 'Person or Group'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1

                        CLabel:
                                text: 'Quantity'
                                size_hint: 0.3, 1
                        RText:
                                id: addRes_qty
                                hint_text: 'Unit Count'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1

                        CLabel:
                                text: 'Supplier'
                                size_hint: 0.3, 1
                        RAutoFillText:
                                id: addRes_supplier
                                hint_text: 'XYZ Suppliers'
                                size_hint: 0.7, 1
                                completions: root.load_suppliers()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Cost'
                                size_hint: 0.3, 1
                        RText:
                                id: addRes_cost
                                hint_text: '10500.00'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Status'
                                size_hint: 0.3, 1
                        RSpinner:
                                id: addRes_status
                                hint_text: 'Permanent'
                                values: ['In Stock', 'Out of Stock']
                                size_hint: 0.8, 1

                GridLayout:
                        cols: 1
                        rows: 1
                        size_hint: 1, 0.15
                        padding: 10

                        RButton4:
                                text: 'Add'
                                size_hint: 1, 0.1
                                on_release: root.add_resource(requestType="Validate")

<ReportResource>:
        GridLayout:
                size: root.size
                pos: root.pos
                cols: 1
                rows: 2
                padding: 20
                spacing: 10
                GridLayout:
                        size_hint: 1, 0.9
                        cols: 2
                        rows: 1
                        spacing: 10
                        GridLayout:
                                cols: 2
                                rows: 5
                                padding: 10
                                spacing: 10
                                size_hint: 1, 0.15

                                CLabel:
                                        text: 'Name'
                                        size_hint: 0.3, 1
                                CLabel:
                                        id: reportRes_name
                                        size_hint: 0.7, 1
                                CLabel:
                                        text: 'Quantity'
                                        size_hint: 0.2, 1
                                CLabel:
                                        id: reportRes_qty
                                        size_hint: 0.3, 1
                                CLabel:
                                        text: 'Status'
                                        size_hint: 0.2, 1
                                CLabel:
                                        id: reportRes_status
                                        size_hint: 0.3, 1
                                CLabel:
                                        text: 'Supplier'
                                        size_hint: 0.4, 1
                                CLabel:
                                        id: reportRes_supplier
                                        size_hint: 0.6, 1
                                CLabel:
                                        text: 'Cost'
                                        size_hint: 0.2, 1
                                CLabel:
                                        id: reportRes_cost
                                        size_hint: 0.3, 1


                        GridLayout:
                                cols: 1
                                rows: 2
                                size_hint: 1, 0.15
                                CLabel:
                                        text: 'Assigned Projects'
                                        size_hint: 1, 0.1
                                ScrollView:
                                        size_hint: 1, 0.9
                                        do_scroll_x: False
                                        GridLayout:
                                                id: assigned_projects
                                                size_hint_y: None
                                                height: self.minimum_height
                                                cols: 1
                                                canvas.before:
                                                        Color:
                                                                rgba: 0, 0, 0, 0.6
                                                        Rectangle:
                                                                pos: self.pos
                                                                size: self.size

                GridLayout:
                        size_hint: 1, 0.1
                        cols: 1
                        rows: 1
                        RButton4:
                                text: 'Back'
                                on_release: root.dismiss_popup(root.popup)