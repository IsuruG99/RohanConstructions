<ProjectsScreen>:
        BoxLayout:
                orientation: 'vertical'
                padding: 40
                spacing: 40

                Label:
                        text: 'Projects'
                        size_hint: 1, 0.1
                        font_size: 30
                        color: 1, 1, 1, 1
                        bold: True

                GridLayout:
                        cols: 2
                        spacing: 20
                        padding: 20
                        size_hint: 1, 0.6

                        Button:
                                text: 'Add Project'
                                font_size: 20
                                on_press: root.btn_click(self)

                        Button:
                                text: 'View Projects'
                                font_size: 20
                                on_press: root.btn_click(self)

                        Button:
                                text: 'Edit Project'
                                font_size: 20
                                on_press: root.btn_click(self)

                        Button:
                                text: 'Delete Project'
                                font_size: 20
                                on_press: root.btn_click(self)

                Button:
                        text: 'Back'
                        font_size: 20
                        size_hint: 1, 0.1
                        on_press:
                                root.manager.current = 'main'
                                root.manager.transition.direction = 'right'

<AddPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 6
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.8

                        Label:
                                text: 'Name'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_name
                                multiline: False
                                font_size: 20

                        Label:
                                text: 'Description'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_desc
                                multiline: False
                                font_size: 20

                        Label:
                                text: 'Start Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_start
                                multiline: False
                                font_size: 20

                        Label:
                                text: 'End Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_end
                                multiline: False
                                font_size: 20

                        Label:
                                text: 'Client'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_client
                                multiline: False
                                font_size: 20

                        Label:
                                text: 'Budget'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_budget
                                multiline: False
                                font_size: 20

                GridLayout:
                        cols: 2
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        Button:
                                text: 'Insert'
                                font_size: 20
                                on_release:
                                        root.addProj(project_name.text, project_desc.text, project_start.text, project_end.text, project_client.text, project_budget.text)
                                        project_name.text = ''
                                        project_desc.text = ''
                                        project_start.text = ''
                                        project_end.text = ''
                                        project_client.text = ''
                                        project_budget.text = ''

                        Button:
                                text: 'Cancel'
                                font_size: 20
                                on_release:
                                        root.dismiss_popup(root.popup)
