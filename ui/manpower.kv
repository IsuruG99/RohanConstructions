                                id: viewEmp_role
                                hint_text: 'Manager'
                                size_hint: 0.8, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Phone'
                                size_hint: 0.2, 1
                        RText:
                                id: viewEmp_phone
                                hint_text: '1234567890'
                                size_hint: 0.8, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Email'
                                size_hint: 0.2, 1
                        RText:
                                id: viewEmp_email
                                hint_text: 'abc@def.com'
                                size_hint: 0.8, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Contract \n Fee'
                                size_hint: 0.2, 1
                        RText:
                                id: viewEmp_contractFee
                                hint_text: '35500.00'
                                size_hint: 0.8, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Retainer \n Fee'
                                size_hint: 0.2, 1
                        RText:
                                id: viewEmp_retainerFee
                                hint_text: '35500.00'
                                size_hint: 0.8, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Status'
                                size_hint: 0.2, 1
                        RSpinner:
                                id: viewEmp_status
                                hint_text: 'Permanent'
                                values: ['Permanent', 'Temp']
                                size_hint: 0.8, 1

                GridLayout:
                        cols: 1
                        rows: 3
                        size_hint: 1, 0.6
                        padding: 10
                        spacing: 10
                        GridLayout:
                                rows: 1
                                cols: 3
                                size_hint: 1, 0.2
                                spacing: 10
                                padding: 10

                                CLabel:
                                        text: 'Project Assignments'
                                        size_hint: 1, 0.4
                                        bold: True

                                RAutoFillText:
                                        id: pList
                                        hint_text: 'Project Name'
                                        text: ''
                                        size_hint_x: 0.5
                                        completions: root.load_projects()
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                                CButton:
                                        text: '+'
                                        size_hint_x: 0.1
                                        on_release: root.reload(pList.text, "Add", self)

                        ScrollView:
                                size_hint: 1, 0.6
                                padding: 10
                                GridLayout:
                                        id: viewEmp_projects
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos

                        GridLayout:
                                cols: 3
                                size_hint: 1, 0.2
                                spacing: 10
                                padding: 10
                                RButton4:
                                        text: 'Save'
                                        size_hint: 1, 1
                                        on_release: root.edit_employee(requestType="Validate")
                                RButton4:
                                        text: 'Delete'
                                        size_hint: 1, 1
                                RButton4:
                                        text: 'Back'
                                        size_hint: 1, 1
                                        on_release: root.dismiss_popup(root.popup)




