<ManpowerScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20
                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05
                        GridLayout:
                                cols: 2
                                spacing: 10
                                size_hint: 0.3, 1
                                RButton4:
                                        text: 'Refresh'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        id: manpower_filter
                                        text: 'Filter: All'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)
                        CLabel:
                                text: 'Employees'
                                size_hint: 0.4, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10
                                RText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.7, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Search'
                                        size_hint: 0.3, 1
                                        on_release: root.search_manpower(search.text)
                GridLayout:
                        rows: 3
                        size_hint: 1, 0.95
                        spacing: 10
                        GridLayout:
                                size_hint: 1, 0.1
                                id: manpower_headers
                                rows: 1
                                height: 50
                        ScrollView:
                                size_hint: 1, 0.8
                                do_scroll_x: False
                                GridLayout:
                                        id: manpower_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos
                        GridLayout:
                                rows: 1
                                cols: 2
                                spacing: 20
                                size_hint: 1, 0.1
                                RButton4:
                                        text: 'Add'
                                        size_hint: 0.6, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        text: 'Back'
                                        size_hint: 0.4, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddManpower>:
        GridLayout:
                cols: 1
                rows: 3
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.85

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 1
                        RText:
                                id: addEmp_name
                                hint_text: 'M. Ali'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Role'
                                size_hint: 0.3, 1
                        RText:
                                id: addEmp_role
                                hint_text: 'Manager'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Email'
                                size_hint: 0.3, 1
                        RText:
                                id: addEmp_email
                                hint_text: 'abc@def.com'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Phone \nNumber'
                                size_hint: 0.3, 1
                        RText:
                                id: addEmp_phone
                                hint_text: '1234567890'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Contract \nFee'
                                size_hint: 0.3, 1
                        RText:
                                id: addEmp_contractFee
                                hint_text: '35500.00'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Retainer \nFee'
                                size_hint: 0.3, 1
                        RText:
                                id: addEmp_retainerFee
                                hint_text: '35500.00'
                                size_hint: 0.7, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Status'
                                size_hint: 0.2, 1
                        RSpinner:
                                id: addEmp_status
                                hint_text: 'Permanent'
                                values: ['Permanent', 'Temp']
                                size_hint: 0.8, 1

                GridLayout:
                        cols: 2
                        size_hint: 1, 0.15
                        padding: 10
                        spacing: 10
                        RButton4:
                                text: 'Add Employee'
                                size_hint: 1, 0.1
                                on_release: root.add_employee(requestType="Validate")
                        RButton4:
                                text: 'Back'
                                size_hint: 1, 0.1
                                on_release: root.dismiss_popup(root.popup)

