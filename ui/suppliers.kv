<SuppliersScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20
                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05

                        GridLayout:
                                cols: 2
                                size_hint: 0.3,1
                                spacing: 10

                                RButton4:
                                        text: 'Refresh'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)

                                RButton4:
                                        text: 'Filter : All'
                                        id: supplierFilter
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)

                        CLabel:
                                text: 'Suppliers'
                                size_hint: 0.4, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10

                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10
                                RText:
                                        id: searchBar
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.7, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Search'
                                        size_hint: 0.3, 1
                                        on_release: root.searchSuppliers(searchBar.text)

                GridLayout:
                        rows: 3
                        spacing: 10
                        size_hint: 1, 0.95
                        GridLayout:
                                size_hint: 1, 0.1
                                id: Supplier_headers
                                rows: 1
                                height: 50
                        ScrollView:
                                size_hint: 1, 0.8
                                do_scroll_x: False
                                GridLayout:
                                        id: Supplier_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos
                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                size_hint: 1, 0.1
                                RButton4:
                                        text: 'Overview'
                                        size_hint: 0.3, 1
                                        on_release: root.overview_suppliers()
                                RButton4:
                                        text: 'Add New Supplier'
                                        size_hint: 0.4, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        text: 'Back'
                                        size_hint: 0.3, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddSupPopup>:
        GridLayout:
                rows: 2
                cols: 1
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 10
                GridLayout:
                        cols: 2
                        rows: 7
                        spacing: 10
                        size_hint: 1, 0.8

                        CLabel:
                                text: 'Name'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RText:
                                id: supplierName
                                multiline: False
                                hint_text: 'Supplier Name'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1

                        CLabel:
                                text: 'Business'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RText:
                                id: business
                                multiline: False
                                hint_text: 'Business Name'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1

                        CLabel:
                                text: 'Contact No'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RText:
                                id: contactNo
                                multiline: False
                                hint_text: '07xxxxxxxx'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1

			            CLabel:
                                text: 'Email'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RText:
                                id: email
                                multiline: False
                                hint_text: 'Email Address'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1

			            CLabel:
                                text: 'Address'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RText:
                                id: address
                                multiline: False
                                hint_text: 'No01, Merchan Tower, Kollupitiya.'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Start Dealing'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RText:
                                id: startDealing
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.7, 1
                        CLabel:
                                text: 'Level'
                                color: 1, 1, 1, 1
                                size_hint: 0.3, 1
                        RSpinner:
                                id: supplierLevel
                                text: 'Supplier Level'
                                values: ['1','2','3']
                                size_hint: 0.7, 1
                GridLayout:
                        cols: 2
                        rows: 1
                        spacing: 20
                        padding: 0,10,0,0
                        size_hint: 1, 0.1
                        RButton4:
                                text: 'Submit'
                                on_release:
                                        root.add_Supplier(requestType="Validate")
                        RButton4:
                                text: 'Cancel'
                                on_release: root.dismiss_popup(root.popup)

