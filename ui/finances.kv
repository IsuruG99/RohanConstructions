<FinancesScreen>
        GridLayout:
                rows: 2
                cols: 1
                padding: 40
                spacing: 20

                GridLayout:
                        cols: 2
                        size_hint: 1, 0.05
                        CLabel:
                                text: 'Finances'
                                size_hint: 0.7, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                                padding: 10

                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10, 0
                                padding: (0, 0, 30, 0)
                                CText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.75, 1
                                CButton2:
                                        text: 'Search'
                                        size_hint: 0.25, 1
                                        on_release: root.searchLogs(search.text)

                GridLayout:
                        rows: 2
                        spacing: 20
                        padding: 20
                        size_hint: 1, 0.9

                        ScrollView:
                                size_hint: 1, 1
                                do_scroll_x: False
                                GridLayout:
                                        id: finances_list
                                        size_hint_y: None
                                        height: self.minimum_height
                                        cols: 1
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos

                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.3

                                CButton2:
                                        id: finances_filter
                                        text: 'All'
                                        size_hint: 0.3, 1
                                        on_release: root.btn_click(self)

                                CButton2:
                                        text: 'Add'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)

                                CButton2:
                                        text: 'Back'
                                        size_hint: 0.2, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'


<ViewLogPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Type'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewLog_type
                                text: 'Type'
                                values: ['Income', 'Expense']
                                font_size: 20
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Amount'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_amount
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_date
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_desc
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Related Entity'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_entity
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Project Name'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewLog_project
                                text: 'Project Name'
                                values: ['']
                                font_size: '20sp'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Category'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewLog_category
                                text: 'Category'
                                values: ['Materials', 'Payroll', 'Contract', 'Misc']
                                font_size: 20
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 3
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Edit'
                                on_release:
                                        root.edit_log(viewLog_type.text, viewLog_amount.text, viewLog_date.text, viewLog_desc.text, viewLog_entity.text, viewLog_project.text, viewLog_category.text)

                        CButton2:
                                text: 'Delete'
                                on_release:
                                        root.delete_log()

                        CButton2:
                                text: 'Report'


<AddLogPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Type'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: addLog_type
                                text: 'Type'
                                values: ['Income', 'Expense']
                                font_size: '20sp'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Amount'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_amount
                                size_hint: 0.7, 0.1
                                hint_text: '10000'

                        CLabel:
                                text: 'Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_date
                                size_hint: 0.7, 0.1
                                hint_text: 'YYYY-MM-DD'

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_desc
                                size_hint: 0.7, 0.1
                                hint_text: 'Description'

                        CLabel:
                                text: 'Related Entity'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_entity
                                size_hint: 0.7, 0.1
                                hint_text: 'Employee, Supplier, etc.'

                        CLabel:
                                text: 'Project Name'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: addLog_project
                                text: 'Project Name'
                                values: ['']
                                font_size: '20sp'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Category'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: addLog_category
                                text: 'Category'
                                values: ['Materials', 'Payroll', 'Contract', 'Misc']
                                font_size: '20sp'
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 1
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Insert'
                                on_release:
                                        root.addLog(addLog_type.text, addLog_amount.text, addLog_date.text, addLog_desc.text, addLog_entity.text, addLog_project.text, addLog_category.text)
                                        addLog_amount.text = ''
                                        addLog_date.text = ''
                                        addLog_desc.text = ''
                                        addLog_entity.text = ''
                                        addLog_project.text = ''