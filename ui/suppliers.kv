<SuppliersScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: 40
                spacing: 20

                GridLayout:
                        cols: 2
                        size_hint: 1, 0.05
                        CLabel:
                                text: 'Suppliers'
                                size_hint: 0.7, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                                padding: 10

                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10, 0
                                padding: (0, 0, 30, 0)
                                CText:
                                        id: searchBar
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.75, 1
                                CButton2:
                                        text: 'Search'
                                        size_hint: 0.25, 1
                                        on_release: root.searchSuppliers(searchBar.text)

                GridLayout:
                        rows: 3
                        padding: 20
                        size_hint: 1, 0.9

                        GridLayout:
                                size_hint: 1, 0.1
                                id: Supplier_headers
                                rows: 1
                                height: 50

                        ScrollView:
                                size_hint: 1, 0.9
                                do_scroll_x: False
                                GridLayout:
                                        id: Supplier_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos

                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.3

                                CButton2:
                                        text: 'All'
                                        id: supplierFilter
                                        size_hint: 0.3, 1
                                        on_release: root.btn_click(self)

                                CButton2:
                                        text: 'Add New Supplier'
                                        size_hint: 0.4, 1
                                        on_release: root.btn_click(self)

                                CButton2:
                                        text: 'Back'
                                        size_hint: 0.3, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'




<AddSupPopup>:
        GridLayout:
                rows: 2
                cols: 1
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.8

                        CLabel: # 1
                                text: 'Name'
                                color: 1, 1, 1, 1
                        CText:
                                id: supplierName
                                multiline: False
                                hint_text: 'Mr.Mahinda Mahattaya'
                                padding: 15

                        CLabel: # 2
                                text: 'Business'
                                color: 1, 1, 1, 1
                        CText:
                                id: business
                                multiline: False
                                hint_text: 'ABC Hardware'
                                padding: 15

                        CLabel: # 3
                                text: 'Contact No'
                                color: 1, 1, 1, 1
                        CText:
                                id: contactNo
                                multiline: False
                                hint_text: '07xxxxxxxx'
                                padding: 15

			            CLabel: # 4
                                text: 'Email'
                                color: 1, 1, 1, 1
                        CText:
                                id: email
                                multiline: False
                                hint_text: 'Email Address'
                                padding: 15

			            CLabel: # 5
                                text: 'Address'
                                color: 1, 1, 1, 1
                        CText:
                                id: address
                                multiline: False
                                hint_text: 'No01, Merchan Tower, Kollupitiya.'
                                padding: 15

                        CLabel: # 6
                                text: 'Start Dealing'
                                color: 1, 1, 1, 1
                        CText:
                                id: startDealing
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                padding: 15

                        CLabel: # 7
                                text: 'Level'
                                color: 1, 1, 1, 1
                        CSpinner:
                                id: supplierLevel
                                text: 'Supplier Level'
                                values: ['1','2','3']

                GridLayout:
                        cols: 2
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Submit'
                                on_release:
                                        root.add_Supplier(supplierName.text, business.text, contactNo.text, email.text, address.text, startDealing.text, supplierLevel.text)
                                        supplierName.text = ''
                                        business.text = ''
                                        contactNo.text = ''
                                        email.text = ''
                                        address.text = ''
                                        startDealing.text = ''
					                    supplierLevel.text = ''

                        CButton2:
                                text: 'Cancel'
                                on_release: root.dismiss_popup(root.popup)


<ViewSupPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Name'
                                color: 1, 1, 1, 1
                        CText:
                                id: supplierName
                                multiline: False
                                padding: 15

                        CLabel:
                                text: 'Business'
                                color: 1, 1, 1, 1
                        CText:
                                id: business
                                multiline: False
                                padding: 15

                        CLabel:
                                text: 'Contact No'
                                color: 1, 1, 1, 1
                        CText:
                                id: contactNo
                                multiline: False
                                padding: 15

			            CLabel:
                                text: 'Email'
                                color: 1, 1, 1, 1
                        CText:
                                id: email
                                multiline: False
                                padding: 15

			            CLabel:
                                text: 'Address'
                                color: 1, 1, 1, 1
                        CText:
                                id: address
                                multiline: False
                                padding: 15

                        CLabel:
                                text: 'Start Dealing'
                                color: 1, 1, 1, 1
                        CText:
                                id: startDealing
                                multiline: False
                                padding: 15

                        CLabel:
                                text: 'Level'
                                color: 1, 1, 1, 1
                        CSpinner:
                                id: supplierLevel
                                values: ['1','2','3']

                GridLayout:
                        cols: 4
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Report'
                                on_release: root.reports_popup()

                        CButton2:
                                text: 'Save'
                                on_release:
                                        root.editSupplier(supplierName.text, business.text, contactNo.text, email.text, address.text, startDealing.text, supplierLevel.text)

                        CButton2:
                                text: 'Delete'
                                on_release: root.deleteSupplier()

                        CButton2:
                                text: 'Cancel'
                                on_release: root.dismiss_popup(root.popup)
