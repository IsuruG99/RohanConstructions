<ReportSupPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 20
                GridLayout:
                        cols: 2
                        rows: 1
                        spacing: 10
                        padding: 0,10
                        size_hint: 1, 0.4
                        GridLayout:
                                cols: 1
                                rows: 3
                                size_hint: 0.5, 1
                                spacing: 10
                                RAutoFillText:
                                        id: reportSupplier_supplierList
                                        text: ''
                                        hint_text: 'Supplier'
                                        size_hint_x: 0.4
                                        completions: root.load_suppliers()
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Search'
                                        on_release: root.populate_supplierOverview(reportSupplier_supplierList.text)

                                GridLayout:
                                        cols: 1
                                        rows: 2
                                        size_hint: 0.5, 1
                                        spacing: 10
                                        CLabel:
                                                id: reportSupplier_supplierCount
                                        CLabel:
                                                id: reportSupplier_resCount


                        GridLayout:
                                cols: 1
                                rows: 1
                                size_hint: 0.5, 1
                                id: reportSupplier_pieChart

                GridLayout:
                        cols: 1
                        rows: 2
                        size_hint: 1, 0.6
                        spacing: 10
                        GridLayout:
                                rows: 3
                                size_hint: 1, 0.5
                                spacing:5
                                CLabel:
                                        text: 'Provided Resources'
                                        size_hint: 1, 0.05
                                GridLayout:
                                        size_hint: 1, 0.2
                                        id: reportSupplier_headers
                                        rows: 1
                                        height: 50

                                ScrollView:
                                        size_hint: 1, 0.75
                                        do_scroll_x: False
                                        GridLayout:
                                                id: reportSupplier_resList
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                canvas.before:
                                                        Color:
                                                                rgba: 0, 0, 0, 0.6
                                                        Rectangle:
                                                                size: self.size
                                                                pos: self.pos