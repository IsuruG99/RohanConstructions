<ProjectsScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20

                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05
                        CButton2:
                                id: projects_filter
                                text: 'Filter: In Progress'
                                size_hint: 0.2, 1
                                on_release: root.btn_click(self)
                        CLabel:
                                text: 'Projects'
                                size_hint: 0.5, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                                padding: 10

                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10, 0
                                padding: (0, 0, 30, 0)
                                CText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.75, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                CButton2:
                                        text: 'Search'
                                        size_hint: 0.25, 1
                                        on_release: root.searchProj(search.text)

                GridLayout:
                        rows: 3
                        size_hint: 1, 0.95

                        GridLayout:
                                size_hint: 1, 0.1
                                id: projects_headers
                                rows: 1
                                height: 50

                        ScrollView:
                                size_hint: 0.95, 1
                                do_scroll_x: False
                                GridLayout:
                                        id: projects_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos

                        GridLayout:
                                rows: 1
                                cols: 2
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.2

                                CButton2:
                                        text: 'Add'
                                        size_hint: 0.6, 1
                                        on_release: root.btn_click(self)

                                CButton2:
                                        text: 'Back'
                                        size_hint: 0.4, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 6
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.8

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_name
                                multiline: False
                                hint_text: 'Project AD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_desc
                                multiline: False
                                hint_text: 'Project is about this.'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Start Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_start
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'End Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_end
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Client'
                                size_hint: 0.3, 0.1
                        AutoFillText:
                                id: project_client
                                multiline: False
                                hint_text: 'ABC Company'
                                size_hint: 0.7, 0.1
                                completions: root.load_clients()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Budget'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_budget
                                multiline: False
                                hint_text: '10000'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                GridLayout:
                        cols: 1
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Insert'
                                on_release:
                                        root.addProj(requestType = "Validate")

<ViewPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_name
                                multiline: False
                                hint_text: 'Project AD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_desc
                                multiline: False
                                hint_text: 'Project is about this.'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Start Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_startDate
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'End Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_endDate
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Client'
                                size_hint: 0.3, 0.1
                        AutoFillText:
                                id: viewPop_client
                                size_hint: 0.7, 0.1
                                hint_text: 'ABC Company'
                                completions: root.load_clients()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Budget'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_budget
                                multiline: False
                                hint_text: '10000'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Status'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewPop_status
                                text: 'In Progress'
                                values: ['In Progress', 'Completed', 'Cancelled']
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 3
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Edit'
                                on_release:
                                        root.editProj(requestType="Validate")

                        CButton2:
                                text: 'Delete'
                                on_release:
                                        root.deleteProj(requestType="Validate")

                        CButton2:
                                text: 'Report'
                                on_release: root.reports_popup(viewPop_name.text)

<ReportsPopup>:
        GridLayout:
                size: root.size
                pos: root.pos
                cols: 1
                rows: 2
                padding: 30
                spacing: 10

                GridLayout:
                        size_hint: 1, 0.9
                        cols: 1
                        rows: 3

                        GridLayout:
                                cols: 4
                                rows: 2
                                padding: 10
                                spacing: 10
                                size_hint: 1, 0.15

                                CLabel:
                                        text: 'Client'
                                        size_hint: 0.25, 1
                                        valign: 'bottom'
                                CLabel:
                                        text: 'Start Date'
                                        size_hint: 0.25, 1
                                        valign: 'bottom'
                                CLabel:
                                        text: 'End Date'
                                        size_hint: 0.25, 1
                                        valign: 'bottom'
                                CLabel:
                                        text: 'Budget'
                                        size_hint: 0.25, 1
                                        valign: 'bottom'

                                CLabel:
                                        id: proj_client
                                        size_hint: 0.25, 1
                                        valign: 'top'
                                CLabel:
                                        id: proj_start
                                        size_hint: 0.25, 1
                                        valign: 'top'
                                CLabel:
                                        id: proj_end
                                        size_hint: 0.25, 1
                                        valign: 'top'
                                CLabel:
                                        id: proj_budget
                                        multiline: False
                                        size_hint: 0.25, 1
                                        valign: 'top'
                        GridLayout:
                                cols: 1
                                rows: 2
                                padding: 20
                                spacing: 10
                                size_hint: 1, 0.15
                                CLabel:
                                        text: 'Description'
                                        size_hint: 1, 0.2
                                CLabel:
                                        id: proj_desc
                                        size_hint: 1, 0.8
                                        font_size: '20sp'
                        GridLayout:
                                cols: 2
                                rows: 4
                                padding: 10
                                size_hint: 1, 0.7
                                RLabelTop:
                                        text: 'Assigned Members'
                                        size_hint_y: 0.2
                                RLabelTop:
                                        text: 'Assigned Resources'
                                        size_hint_y: 0.2
                                ScrollView:
                                        GridLayout:
                                                id: assigned_manpower
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                scroll_type: ['bars', 'content']
                                                bar_width: 10
                                                bar_color: 1, 0, 0, 1  # RGBA for the scrollbar color
                                                bar_inactive_color: 0.5, 0.5, 0.5, 1  # RGBA for the scrollbar's inactive color
                                ScrollView:
                                        GridLayout:
                                                id: assigned_resources
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                scroll_type: ['bars', 'content']
                                                bar_width: 10
                                                bar_color: 1, 0, 0, 1  # RGBA for the scrollbar color
                                                bar_inactive_color: 0.5, 0.5, 0.5, 1  # RGBA for the scrollbar's inactive color

                GridLayout:
                        size_hint: 1, 0.1
                        cols: 1
                        rows: 1

                        CButton2:
                                text: 'Back'
                                on_release: root.dismiss_popup(root.popup)