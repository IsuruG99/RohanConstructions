<ProjectsScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: 40
                spacing: 20

                Label:
                        text: 'Projects'
                        size_hint: 1, 0.1
                        font_size: 30
                        color: 1, 1, 1, 1
                        bold: True

                GridLayout:
                        rows: 2
                        spacing: 20
                        padding: 20
                        size_hint: 1, 0.9

                        ScrollView:
                                size_hint: 1, 1
                                do_scroll_x: False
                                GridLayout:
                                        id: projects_list
                                        size_hint_y: None
                                        height: self.minimum_height
                                        spacing: 10
                                        padding: 10
                                        cols: 1
                                        font_name: 'Roboto'
                                        canvas.before:
                                                Color:
                                                        rgba: 0.1, 0.1, 0.1, 1
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                        GridLayout:
                                rows: 1
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.3

                                Button:
                                        text: 'Add'
                                        font_size: 20
                                        on_press: root.btn_click(self)

                                Button:
                                        text: 'Edit'
                                        font_size: 20
                                        on_press: root.btn_click(self)

                                Button:
                                        text: 'Delete'
                                        font_size: 20
                                        on_press: root.btn_click(self)

                                Button:
                                        text: 'Back'
                                        font_size: 20
                                        size_hint: 1, 0.1
                                        on_press:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 6
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.8

                        Label:
                                text: 'Name'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_name
                                multiline: False
                                font_size: 20
                                hint_text: 'Project AD'

                        Label:
                                text: 'Description'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_desc
                                multiline: False
                                font_size: 20
                                hint_text: 'Project is about this.'

                        Label:
                                text: 'Start Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_start
                                multiline: False
                                font_size: 20
                                hint_text: 'YYYY-MM-DD'

                        Label:
                                text: 'End Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_end
                                multiline: False
                                font_size: 20
                                hint_text: 'YYYY-MM-DD'

                        Label:
                                text: 'Client'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_client
                                multiline: False
                                font_size: 20
                                hint_text: 'ABC Company'

                        Label:
                                text: 'Budget'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_budget
                                multiline: False
                                font_size: 20
                                hint_text: '10000'

                GridLayout:
                        cols: 2
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        Button:
                                text: 'Insert'
                                font_size: 20
                                on_release:
                                        root.addProj(project_name.text, project_desc.text, project_start.text, project_end.text, project_client.text, project_budget.text)
                                        project_name.text = ''
                                        project_desc.text = ''
                                        project_start.text = ''
                                        project_end.text = ''
                                        project_client.text = ''
                                        project_budget.text = ''

                        Button:
                                text: 'Cancel'
                                font_size: 20
                                on_release:
                                        root.dismiss_popup(root.popup)
