<MainScreen>:
        BoxLayout:
                orientation: 'vertical'
                padding: 40
                spacing: 40

                CLabel:
                        text: 'Project Management System'
                        size_hint: 1, 0.1
                        font_size: '40sp'
                        bold: True

                CLabel:
                        text: 'Rohan Constructions'
                        font_size: '60sp'
                        size_hint: 1, 0.1

                GridLayout:
                        cols: 3
                        spacing: 40
                        padding: 40
                        size_hint: 1, 0.6

                        CButton:
                                text: 'Projects'
                                font_size: '35sp'
                                on_release:
                                        app.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        CButton:
                                text: 'Clients'
                                font_size: '35sp'
                                on_release:
                                        app.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        CButton:
                                text: 'Suppliers'
                                font_size: '35sp'
                                on_release:
                                        app.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        CButton:
                                text: 'Resources'
                                font_size: '35sp'
                                on_release:
                                        app.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        CButton:
                                text: 'Personnel'
                                font_size: '35sp'
                                on_release:
                                        app.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        CButton:
                                text: 'Finances'
                                font_size: '35sp'
                                on_release:
                                        app.btn_click(self)
                                        root.manager.transition.direction = 'left'