                        rows: 4
                        spacing: 10
                        size_hint: 1, 0.35

                        CLabel:
                                text: 'Name'
                                size_hint: 0.2, 1
                        RText:
                                id: viewEmp_name
                                hint_text: 'M. Ali'
                                size_hint: 0.8, 1
