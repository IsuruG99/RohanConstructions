<LogInPopUp>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 2
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.6

                        CLabel:
                                text: 'Email'
                                size_hint: 0.4, 0.2
                        CText:
                                id: email
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.6, 0.2

                        CLabel:
                                text: 'Password'
                                size_hint: 0.4, 0.2
                                bold: True
                        CText:
                                id: password
                                size_hint: 0.6, 0.2
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                password: True


                GridLayout:
                        cols: 2
                        rows: 1
                        size_hint: 1, 0.4
                        padding: 20
                        spacing: 20

                        CButton2:
                                text: 'Exit'
                                on_release: root.dismiss_popup()


                        CButton2:
                                text: 'Log In'
                                on_release: root.login(email.text, password.text)
