<FinancesScreen>
        GridLayout:
                rows: 2
                cols: 1
                padding: 40
                spacing: 20

                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05
                        CButton2:
                                id: finances_filter
                                text: 'Filter: All'
                                size_hint: 0.3, 1
                                on_release: root.btn_click(self)
                        CLabel:
                                text: 'Finances'
                                size_hint: 0.7, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                                padding: 10

                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10, 0
                                padding: (0, 0, 30, 0)
                                CText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.75, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                CButton2:
                                        text: 'Search'
                                        size_hint: 0.25, 1
                                        on_release: root.searchLogs(search.text)

                GridLayout:
                        rows: 3
                        padding: 20
                        size_hint: 1, 0.9

                        GridLayout:
                                size_hint: 1, 0.1
                                id: finance_headers
                                rows: 1
                                height: 50

                        ScrollView:
                                size_hint: 1, 1
                                do_scroll_x: False
                                GridLayout:
                                        id: finances_list
                                        size_hint_y: None
                                        height: self.minimum_height
                                        cols: 1
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos

                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.3

                                CButton2:
                                        text: 'Overview'
                                        size_hint: 0.3, 1
                                        on_release: root.overview_log()

                                CButton2:
                                        text: 'Add'
                                        size_hint: 0.4, 1
                                        on_release: root.btn_click(self)

                                CButton2:
                                        text: 'Back'
                                        size_hint: 0.3, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'


<ViewLogPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Type'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewLog_type
                                text: 'Type'
                                values: ['Income', 'Expense']
                                font_size: 20
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Amount'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_amount
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_date
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_desc
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Related Entity'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewLog_entity
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Project Name'
                                size_hint: 0.3, 0.1
                        AutoFillText:
                                id: viewLog_project
                                size_hint: 0.7, 0.1
                                completions: root.load_project_list()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Category'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewLog_category
                                text: 'Category'
                                values: ['Materials', 'Payroll', 'Contract', 'Misc']
                                font_size: 20
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 3
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Edit'
                                on_release:
                                        root.edit_log(requestType="Validate")

                        CButton2:
                                text: 'Delete'
                                on_release:
                                        root.delete_log(requestType="Validate")

                        CButton2:
                                text: 'Report'


<AddLogPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Type'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: addLog_type
                                text: 'Type'
                                values: ['Income', 'Expense']
                                font_size: '20sp'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Amount'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_amount
                                size_hint: 0.7, 0.1
                                hint_text: '10000'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_date
                                size_hint: 0.7, 0.1
                                hint_text: 'YYYY-MM-DD'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_desc
                                size_hint: 0.7, 0.1
                                hint_text: 'Description'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Related Entity'
                                size_hint: 0.3, 0.1
                        CText:
                                id: addLog_entity
                                size_hint: 0.7, 0.1
                                hint_text: 'Employee, Supplier, etc.'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Project Name'
                                size_hint: 0.3, 0.1
                        AutoFillText:
                                id: addLog_project
                                size_hint: 0.7, 0.1
                                completions: root.load_project_list()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Category'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: addLog_category
                                text: 'Category'
                                values: ['Materials', 'Payroll', 'Contract', 'Misc']
                                font_size: '20sp'
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 1
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton2:
                                text: 'Insert'
                                on_release:
                                        root.addLog(requestType="Validate")

<FinanceOverview>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 10
                GridLayout:
                        cols: 1
                        rows: 2
                        size_hint: 0.9, 0.9
                        spacing: 20
                        padding: 20
                        GridLayout:
                                cols: 1
                                rows: 3
                                spacing: 10
                                size_hint: 1, 0.4
                                CLabel:
                                        text: 'Year and Month'
                                        size_hint: 1, 0.4
                                        font_size: '30sp'

                                GridLayout:
                                        cols: 2
                                        rows: 1
                                        size_hint: 1, 0.6
                                        spacing: 10
                                        AutoFillText:
                                                id: overview_year
                                                text: '2024'
                                                hint_text: 'Year'
                                                size_hint: 0.3, 0.4
                                                font_size: '25sp'
                                                halign: 'center'
                                                multiline: False
                                                completions: [str(i) for i in range(1900, 2101)]
                                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                        AutoFillText:
                                                id: overview_month
                                                size_hint: 0.3, 0.4
                                                # how do i say that the text should be a month, but can be blank as well?
                                                hint_text: 'Month (optional)'
                                                font_size: '25sp'
                                                halign: 'center'
                                                multiline: False
                                                completions: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
                                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                CButton2:
                                        text: 'Check'
                                        size_hint: 0.3, 0.4
                                        on_release: root.populate_overview(overview_year.text, overview_month.text)

                        GridLayout:
                                cols: 2
                                rows: 3
                                size_hint: 1, 0.6
                                spacing: 10

                                CLabel:
                                        text: 'Total Income'
                                        size_hint: 0.5, 0.3
                                CLabel:
                                        id: overview_income
                                        size_hint: 0.5, 0.3
                                        multiline: False

                                CLabel:
                                        text: 'Total Expense'
                                        size_hint: 0.5, 0.3
                                CLabel:
                                        id: overview_expense
                                        size_hint: 0.5, 0.3
                                        multiline: False

                                CLabel:
                                        text: 'Balance'
                                        size_hint: 0.5, 0.3
                                CLabel:
                                        id: overview_balance
                                        size_hint: 0.5, 0.3
                                        multiline: False

                CButton2:
                        text: 'Back'
                        size_hint: 1, 0.1
                        on_release: root.dismiss_popup(root.popup)