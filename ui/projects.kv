<ProjectsScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20
                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05
                        GridLayout:
                                cols: 2
                                spacing: 10
                                size_hint: 0.3, 1
                                RButton4:
                                        text: 'Refresh'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        id: projects_filter
                                        text: 'Filter: In Progress'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)
                        CLabel:
                                text: 'Projects'
                                size_hint: 0.4, 1
                                font_size: '30sp'
                                bold: True
                                spacing: 10
                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10
                                RText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.7, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Search'
                                        size_hint: 0.3, 1
                                        on_release: root.searchProj(search.text)
                GridLayout:
                        rows: 3
                        size_hint: 1, 0.95
                        spacing: 10
                        GridLayout:
                                size_hint: 1, 0.1
                                id: projects_headers
                                rows: 1
                                height: 50
                        ScrollView:
                                size_hint: 0.95, 1
                                do_scroll_x: False
                                GridLayout:
                                        id: projects_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos
                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                size_hint: 1, 0.1
                                RButton4:
                                        text: 'Overview'
                                        size_hint: 0.4, 1
                                        on_release: root.reports_popup()
                                RButton4:
                                        text: 'Add'
                                        size_hint: 0.4, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        text: 'Back'
                                        size_hint: 0.2, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 6
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.85

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        RText:
                                id: project_name
                                multiline: False
                                hint_text: 'Project AD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        RText:
                                id: project_desc
                                multiline: False
                                hint_text: 'Project is about this.'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Start Date'
                                size_hint: 0.3, 0.1
                        RText:
                                id: project_start
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'End Date'
                                size_hint: 0.3, 0.1
                        RText:
                                id: project_end
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Client'
                                size_hint: 0.3, 0.1
                        RAutoFillText:
                                id: project_client
                                multiline: False
                                hint_text: 'ABC Company'
                                size_hint: 0.7, 0.1
                                completions: root.load_clients()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Budget'
                                size_hint: 0.3, 0.1
                        RText:
                                id: project_budget
                                multiline: False
                                hint_text: '10000'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                GridLayout:
                        cols: 2
                        rows: 1
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.15

                        RButton4:
                                text: 'Insert'
                                on_release:
                                        root.addProj(requestType = "Validate")
                        RButton4:
                                text: 'Back'
                                on_release: root.popup.dismiss()

<ViewPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        RText:
                                id: viewPop_name
                                multiline: False
                                hint_text: 'Project AD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        RText:
                                id: viewPop_desc
                                multiline: False
                                hint_text: 'Project is about this.'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Start Date'
                                size_hint: 0.3, 0.1
                        RText:
                                id: viewPop_startDate
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'End Date'
                                size_hint: 0.3, 0.1
                        RText:
                                id: viewPop_endDate
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Client'
                                size_hint: 0.3, 0.1
                        RAutoFillText:
                                id: viewPop_client
                                size_hint: 0.7, 0.1
                                hint_text: 'ABC Company'
                                completions: root.load_clients()
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Budget'
                                size_hint: 0.3, 0.1
                        RText:
                                id: viewPop_budget
                                multiline: False
                                hint_text: '10000'
                                size_hint: 0.7, 0.1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Status'
                                size_hint: 0.3, 0.1
                        RSpinner:
                                id: viewPop_status
                                text: 'In Progress'
                                values: ['In Progress', 'Completed']
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 3
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        RButton4:
                                text: 'Edit'
                                on_release:
                                        root.editProj(requestType="Validate")

                        RButton4:
                                text: 'Delete'
                                on_release:
                                        root.deleteProj(requestType="Validate")

                        RButton4:
                                text: 'Back'
                                on_release: root.popup.dismiss()

<ReportsPopup>:
        GridLayout:
                size: root.size
                pos: root.pos
                cols: 1
                rows: 4
                padding: 20
                spacing: 10
                GridLayout:
                        size_hint: 1, 0.25
                        cols: 2
                        rows: 1
                        spacing: 20
                        GridLayout:
                                size_hint: 0.5, 1
                                cols: 1
                                rows: 2
                                spacing: 10
                                padding: 0, 10
                                RAutoFillText:
                                        id: reportProject_select
                                        hint_text: 'Project Name'
                                        multiline: False
                                        size_hint: 1, 0.5
                                        completions: root.load_projects()
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Generate Report'
                                        size_hint: 1, 0.5
                                        on_release: root.populate_reports(reportProject_select.text)
                        GridLayout:
                                size_hint: 0.5, 1
                                cols: 2
                                rows: 3
                                spacing: 5
                                CLabel:
                                        text: 'Start Date'
                                        size_hint: 0.2, 0.25
                                RText:
                                        id: reportProject_startDate
                                        size_hint: 0.3, 0.3
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                CLabel:
                                        text: 'End Date'
                                        size_hint: 0.2, 0.25
                                RText:
                                        id: reportProject_endDate
                                        size_hint: 0.3, 0.3
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                CLabel:
                                        text: 'Status'
                                        size_hint: 0.2, 0.25
                                RText:
                                        id: reportProject_status
                                        size_hint: 0.3, 0.3
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                GridLayout:
                        cols: 2
                        rows: 2
                        size_hint: 1, 0.55
                        CLabel:
                                text: 'Assigned Members'
                                size_hint_y: 0.2
                                canvas.before:
                                        Color:
                                                rgba: 0, 0, 0, 0.3
                                        Rectangle:
                                                size: self.size
                                                pos: self.pos
                        CLabel:
                                text: 'Assigned Resources'
                                size_hint_y: 0.2
                                canvas.before:
                                        Color:
                                                rgba: 0, 0, 0, 0.3
                                        Rectangle:
                                                size: self.size
                                                pos: self.pos
                        ScrollView:
                                GridLayout:
                                        id: assigned_manpower
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                        ScrollView:
                                GridLayout:
                                        id: assigned_resources
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height

                GridLayout:
                        size_hint: 1, 0.15
                        cols: 4
                        rows: 2
                        spacing: 10
                        CLabel:
                                text: 'Manpower Cost'
                                size_hint: 0.2, 1
                        RText:
                                id: reportProject_manpowerCost
                                size_hint: 0.3, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Resource Cost'
                                size_hint: 0.2, 1
                        RText:
                                id: reportProject_resourceCost
                                size_hint: 0.3, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Project Budget'
                                size_hint: 0.2, 1
                        RText:
                                id: reportProject_projectBudget
                                size_hint: 0.3, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Net Profit'
                                size_hint: 0.2, 1
                        RText:
                                id: reportProject_netProfit
                                size_hint: 0.3, 1
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                GridLayout:
                        size_hint: 1, 0.1
                        cols: 2
                        rows: 1
                        spacing: 10
                        RButton4:
                                text: 'Finalize'
                                size_hint: 0.5, 1
                                on_release: root.finalize_projects(reportProject_select.text)
                        RButton4:
                                text: 'Back'
                                size_hint: 0.5, 1
                                on_release: root.popup.dismiss()