<ClientsScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20
                GridLayout:
                        cols: 3
                        size_hint: 1, 0.05
                        RButton4:
                                id: clients_filter
                                text: 'Refresh'
                                size_hint: 0.3, 1
                                on_release: root.btn_click(self)
                        CLabel:
                                text: 'Clients'
                                size_hint: 0.4, 1
                                font_size: '30sp'
                                bold: True
                                padding: 10

                        GridLayout:
                                cols: 2
                                size_hint: 0.3, 1
                                spacing: 10
                                RText:
                                        id: search
                                        hint_text: 'Search'
                                        multiline: False
                                        size_hint: 0.7, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        text: 'Search'
                                        size_hint: 0.3, 1
                                        on_release: root.search_clients(search.text)

                GridLayout:
                        rows: 3
                        size_hint: 1, 0.95
                        spacing: 10

                        GridLayout:
                                size_hint: 1, 0.1
                                id: clients_headers
                                rows: 1
                                height: 50
                        ScrollView:
                                size_hint: 1, 0.8
                                do_scroll_x: False
                                GridLayout:
                                        id: clients_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                size_hint: 1, 0.1
                                RButton4:
                                        text: 'Overview'
                                        size_hint: 0.4, 1
                                        on_release: root.btn_click(self)
                                RButton4:
                                        text: 'Add'
                                        size_hint: 0.4, 1
                                        on_release: root.add_client_popup()
                                RButton4:
                                        text: 'Back'
                                        size_hint: 0.2, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'
<AddClientPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 20
                GridLayout:
                        cols: 2
                        rows: 4
                        spacing: 10
                        size_hint: 1, 0.8
                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        RText:
                                id: add_client_name
                                multiline: False
                                hint_text: 'Client Name'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Contact'
                                size_hint: 0.3, 0.1
                        RText:
                                id: add_client_phone_number
                                multiline: False
                                hint_text: 'Phone Number'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Email'
                                size_hint: 0.3, 0.1
                        RText:
                                id: add_client_email
                                multiline: False
                                hint_text: 'Email'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                        CLabel:
                                text: 'Address'
                                size_hint: 0.3, 0.1
                        RText:
                                id: add_client_address
                                multiline: False
                                hint_text: 'Address'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                GridLayout:
                        cols: 2
                        rows: 1
                        spacing: 10
                        size_hint: 1, 0.2
                        RButton4:
                                text: 'Insert'
                                on_release:
                                        root.add_client(requestType="Validate")
                        RButton4:
                                text: 'Cancel'
                                on_release:
                                        root.dismiss_popup(self)

<ViewClientPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 20
                GridLayout:
                        cols: 2
                        rows: 4  # Adjusted to match the number of fields
                        spacing: 10
                        size_hint: 1, 0.8

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        RText:
                                id: view_client_name
                                multiline: False
                                hint_text: 'Client Name'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Contact'
                                size_hint: 0.3, 0.1
                        RText:
                                id: view_client_phone_number
                                multiline: False
                                hint_text: 'Phone Number'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Email'
                                size_hint: 0.3, 0.1
                        RText:
                                id: view_client_email
                                multiline: False
                                hint_text: 'Email'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                        CLabel:
                                text: 'Address'
                                size_hint: 0.3, 0.1
                        RText:
                                id: view_client_address
                                multiline: False
                                hint_text: 'Address'
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]


                GridLayout:
                        cols: 2
                        rows: 1
                        spacing: 10
                        size_hint: 1, 0.2

                        RButton4:
                                text: 'Save'
                                on_release:
                                        root.edit_client(requestType="Validate")

                        RButton4:
                                text: 'Delete'
                                on_release:
                                        root.delete_client(requestType="Validate")


<ClientsReport>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos
                padding: 20
                spacing: 20
                GridLayout:
                        cols: 2
                        rows: 1
                        spacing: 10
                        padding: 0,10
                        size_hint: 1, 0.4
                        GridLayout:
                                cols: 1
                                rows: 3
                                spacing: 10
                                size_hint: 0.5, 1
                                GridLayout:
                                        cols: 2
                                        rows: 2
                                        spacing: 10
                                        size_hint: 1, 0.35
                                        RAutoFillText:
                                                id: overview_year
                                                text: '2024'
                                                hint_text: 'Year'
                                                size_hint: 0.5, 1
                                                font_size: '25sp'
                                                halign: 'center'
                                                multiline: False
                                                completions: [str(i) for i in range(1900, 2101)]
                                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                        RAutoFillText:
                                                id: overview_month
                                                size_hint: 0.5, 1
                                                hint_text: 'Month'
                                                font_size: '25sp'
                                                halign: 'center'
                                                multiline: False
                                                completions: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
                                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                RButton4:
                                        size_hint: 1, 0.25
                                        text: 'Submit'
                                        on_release: root.populate_clientOverview(overview_year.text, overview_month.text)
                                GridLayout:
                                        cols: 1
                                        rows: 3
                                        size_hint: 1, 0.45
                                        spacing: 10
                                        CLabel:
                                                id: reportClient_clientCount
                                        CLabel:
                                                id: reportClient_projectCount
                                        CLabel:
                                                id: reportClient_profit


                        GridLayout:
                                cols: 1
                                rows: 1
                                size_hint: 0.5, 1
                                id: reportClient_pieChart

                GridLayout:
                        cols: 1
                        rows: 2
                        size_hint: 1, 0.6
                        spacing: 10
                        GridLayout:
                                rows: 3
                                size_hint: 1, 0.5
                                spacing:5
                                CLabel:
                                        text: 'Ongoing Projects'
                                        size_hint: 1, 0.05
                                GridLayout:
                                        size_hint: 1, 0.2
                                        id: ongoingProject_headers
                                        rows: 1
                                        height: 50

                                ScrollView:
                                        size_hint: 1, 0.75
                                        do_scroll_x: False
                                        GridLayout:
                                                id: reportClient_ongoingProjects
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                canvas.before:
                                                        Color:
                                                                rgba: 0, 0, 0, 0.6
                                                        Rectangle:
                                                                size: self.size
                                                                pos: self.pos
                        GridLayout:
                                rows: 3
                                size_hint: 1, 0.5
                                spacing:5
                                CLabel:
                                        text: 'Completed Projects'
                                        size_hint: 1, 0.05
                                GridLayout:
                                        size_hint: 1, 0.2
                                        id: completedProject_headers
                                        rows: 1
                                        height: 50

                                ScrollView:
                                        size_hint: 1, 0.75
                                        do_scroll_x: False
                                        GridLayout:
                                                id: reportClient_completedProjects
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                canvas.before:
                                                        Color:
                                                                rgba: 0, 0, 0, 0.6
                                                        Rectangle:
                                                                size: self.size
                                                                pos: self.pos




