<ProjectsScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: 40
                spacing: 20

                Label:
                        text: 'Projects'
                        size_hint: 1, 0.1
                        font_size: 30
                        color: 1, 1, 1, 1
                        bold: True

                GridLayout:
                        rows: 2
                        spacing: 20
                        padding: 20
                        size_hint: 1, 0.9

                        ScrollView:
                                size_hint: 1, 1
                                do_scroll_x: False
                                GridLayout:
                                        id: projects_list
                                        size_hint_y: None
                                        height: self.minimum_height
                                        spacing: 10
                                        padding: 10
                                        cols: 1
                                        font_name: 'Roboto'
                                        canvas.before:
                                                Color:
                                                        rgba: 0.1, 0.1, 0.1, 1
                                                Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.3

                                Button:
                                        text: 'Current/Completed'
                                        font_size: 20
                                        size_hint: 0.3, 1
                                        on_press: root.btn_click(self)

                                Button:
                                        text: 'Add'
                                        font_size: 20
                                        size_hint: 0.5, 1
                                        on_press: root.btn_click(self)

                                Button:
                                        text: 'Back'
                                        font_size: 20
                                        size_hint: 0.2, 1
                                        on_press:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddPopup>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 6
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.8

                        Label:
                                text: 'Name'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_name
                                multiline: False
                                font_size: 20
                                hint_text: 'Project AD'

                        Label:
                                text: 'Description'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_desc
                                multiline: False
                                font_size: 20
                                hint_text: 'Project is about this.'

                        Label:
                                text: 'Start Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_start
                                multiline: False
                                font_size: 20
                                hint_text: 'YYYY-MM-DD'

                        Label:
                                text: 'End Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_end
                                multiline: False
                                font_size: 20
                                hint_text: 'YYYY-MM-DD'

                        Label:
                                text: 'Client'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_client
                                multiline: False
                                font_size: 20
                                hint_text: 'ABC Company'

                        Label:
                                text: 'Budget'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: project_budget
                                multiline: False
                                font_size: 20
                                hint_text: '10000'

                GridLayout:
                        cols: 2
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        Button:
                                text: 'Insert'
                                font_size: 20
                                on_release:
                                        root.addProj(project_name.text, project_desc.text, project_start.text, project_end.text, project_client.text, project_budget.text)
                                        project_name.text = ''
                                        project_desc.text = ''
                                        project_start.text = ''
                                        project_end.text = ''
                                        project_client.text = ''
                                        project_budget.text = ''

                        Button:
                                text: 'Cancel'
                                font_size: 20
                                on_release:
                                        root.dismiss_popup(root.popup)

<ViewPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        Label:
                                text: 'Name'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: viewPop_name
                                multiline: False
                                font_size: 20
                                hint_text: 'Project AD'

                        Label:
                                text: 'Description'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: viewPop_desc
                                multiline: False
                                font_size: 20
                                hint_text: 'Project is about this.'

                        Label:
                                text: 'Start Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: viewPop_startDate
                                multiline: False
                                font_size: 20
                                hint_text: 'YYYY-MM-DD'

                        Label:
                                text: 'End Date'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: viewPop_endDate
                                multiline: False
                                font_size: 20
                                hint_text: 'YYYY-MM-DD'

                        Label:
                                text: 'Client'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: viewPop_client
                                multiline: False
                                font_size: 20
                                hint_text: 'ABC Company'

                        Label:
                                text: 'Budget'
                                font_size: 20
                                color: 1, 1, 1, 1

                        TextInput:
                                id: viewPop_budget
                                multiline: False
                                font_size: 20
                                hint_text: '10000'

                        Label:
                                text: 'Status'
                                font_size: 20
                                color: 1, 1, 1, 1

                        Spinner:
                                id: viewPop_status
                                text: 'In Progress'
                                values: ['In Progress', 'Completed', 'Cancelled']

                GridLayout:
                        cols: 3
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        Button:
                                text: 'Edit'
                                font_size: 20
                                on_release:
                                        root.editProj(viewPop_name.text, viewPop_desc.text, viewPop_startDate.text, viewPop_endDate.text, viewPop_client.text, viewPop_budget.text, viewPop_status.text)

                        Button:
                                text: 'Delete'
                                font_size: 20
                                on_release:
                                        root.deleteProj()

                        Button:
                                text: 'Report'
                                font_size: 20
                                on_release: root.reports_popup()

                        Button:
                                text: 'Cancel'
                                font_size: 20
                                on_release:
                                        root.dismiss_popup(root.popup)

<ReportsPopup>:
        title: 'Project Details'
        auto_dismiss: False
        background_color: 0, 0, 0, 1

        GridLayout:
                size: root.size
                pos: root.pos
                cols: 1
                rows: 2
                padding: 30
                spacing: 30

                GridLayout:
                        size_hint: 1, 0.9
                        cols: 2
                        rows: 1
                        color: 1, 1, 1, 1

                        GridLayout:
                                cols: 1
                                rows: 10
                                color: 1, 1, 1, 1
                                spacing: 10
                                padding: 10

                                Label:
                                        text: 'Project ID'
                                        font_size: 20
                                        color: 1, 1, 1, 1

                                Label:
                                        font_size: 15
                                        id: proj_id
                                        color: 1, 1, 1, 1

                                Label:
                                        text: 'Project Name'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                Label:
                                        font_size: 15
                                        id: proj_name
                                        color: 1, 1, 1, 1

                                Label:
                                        text: 'Client'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                Label:
                                        font_size: 15
                                        id: proj_client
                                        color: 1, 1, 1, 1

                                Label:
                                        text: 'Start Date'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                Label:
                                        font_size: 15
                                        id: proj_start
                                        color: 1, 1, 1, 1

                                Label:
                                        text: 'End Date'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                Label:
                                        id: proj_end
                                        font_size: 15
                                        color: 1, 1, 1, 1

                        GridLayout:
                                cols: 1
                                rows: 10
                                color: 1, 1, 1, 1
                                padding: 10

                                Label:
                                        text: 'Description'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                        size_hint_y: 0.2
                                Label:
                                        font_size: 15
                                        id: proj_desc
                                        multiline: True
                                        size_hint_y: 0.5

                                Label:
                                        text: 'Budget'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                        size_hint_y: 0.2
                                Label:
                                        font_size: 15
                                        id: proj_budget
                                        multiline: False
                                        size_hint_y: 0.2

                                Label:
                                        text: 'Assigned Members'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                        size_hint_y: 0.2
                                ScrollView:
                                        GridLayout:
                                                id: assigned_manpower
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                color: 1, 1, 1, 1
                                                scroll_type: ['bars', 'content']
                                                bar_width: 10
                                                bar_color: 1, 0, 0, 1  # RGBA for the scrollbar color
                                                bar_inactive_color: 0.5, 0.5, 0.5, 1  # RGBA for the scrollbar's inactive color

                                Label:
                                        text: 'Assigned Resources'
                                        font_size: 20
                                        color: 1, 1, 1, 1
                                        size_hint_y: 0.2
                                ScrollView:
                                        GridLayout:
                                                id: assigned_resources
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                color: 1, 1, 1, 1
                                                scroll_type: ['bars', 'content']
                                                bar_width: 10
                                                bar_color: 1, 0, 0, 1  # RGBA for the scrollbar color
                                                bar_inactive_color: 0.5, 0.5, 0.5, 1  # RGBA for the scrollbar's inactive color

                GridLayout:
                        size_hint: 1, 0.1
                        cols: 1
                        rows: 1
                        color: 1, 1, 1, 1

                        Button:
                                text: 'Back'
                                font_size: 20
                                on_release: root.dismiss_popup(root.popup)