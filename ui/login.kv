<LogInPopUp>:
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 2
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.6

                        CLabel:
                                text: 'Email'
                                size_hint: 0.4, 0.2
                                bold: True
                        CText:
                                id: email
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                size_hint: 0.6, 0.2
                                text: 'a'

                        CLabel:
                                text: 'Password'
                                size_hint: 0.4, 0.2
                                bold: True
                        CText:
                                id: password
                                text: 'a'
                                size_hint: 0.6, 0.2
                                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                password: True


                GridLayout:
                        cols: 2
                        rows: 1
                        size_hint: 1, 0.4
                        padding: 20
                        spacing: 20

                        RButton3:
                                text: 'Exit'
                                on_release: root.dismiss_popup()


                        RButton3:
                                text: 'Log In'
                                on_release: root.login(email.text, password.text)

<AdminControls>:
        GridLayout:
                cols: 1
                rows: 4
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        padding: 20
                        size_hint: 1.0, 0.15

                        CLabel:
                                id: current_user
                                size_hint: 0.8, 1
                                bold: True

                        RButton3:
                                text: 'Log Out'
                                size_hint: 0.2, 1
                                on_release: root.btn_click(self)

                GridLayout:
                        cols: 1
                        rows: 2
                        padding: 20
                        size_hint: 1, 0.5

                        GridLayout:
                                size_hint: 0.95, 0.1
                                id: account_headers
                                rows: 1
                                height: 50

                        ScrollView:
                                size_hint: 0.95, 0.9
                                do_scroll_x: False
                                GridLayout:
                                        id: account_list
                                        cols: 1
                                        size_hint_y: None
                                        height: self.minimum_height
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 0, 0, 0.6
                                                Rectangle:
                                                        size: self.size
                                                        pos: self.pos
                GridLayout:
                        cols: 2
                        size_hint: 1, 0.2
                        padding: 20
                        spacing: 20
                        GridLayout:
                                cols: 2
                                rows: 2
                                spacing: 20
                                size_hint: 0.55, 1

                                CLabel:
                                        text: 'Email'
                                        size_hint: 0.2, 1
                                        bold: True
                                CText:
                                        id: edit_email
                                        hint_text: 'Email'
                                        size_hint: 0.8, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                        disabled: True

                                CLabel:
                                        text: 'Status'
                                        size_hint: 0.2, 1
                                        bold: True
                                CLabel:
                                        id: edit_last_login
                                        size_hint: 0.8, 1

                        GridLayout:
                                cols: 2
                                rows: 2
                                size_hint: 0.45, 1
                                spacing: 20

                                CLabel:
                                        text: 'Password'
                                        size_hint: 0.3, 1
                                        bold: True
                                CText:
                                        id: edit_password
                                        hint_text: 'Password'
                                        size_hint: 0.7, 1
                                        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                                        password: True

                                CLabel:
                                        text: 'Access'
                                        size_hint: 0.3, 1
                                        bold: True
                                CSpinner:
                                        id: edit_access
                                        values: ['0', '1', '2', '3']
                                        size_hint: 0.7, 1

                GridLayout:
                        cols: 3
                        rows: 1
                        size_hint: 1, 0.15
                        padding: 20
                        spacing: 20
                        RButton3:
                                size_hint: 0.3, 1
                                text: 'Add'
                                on_release: root.add_user(requestType="Validate")

                        RButton3:
                                size_hint: 0.3, 1
                                text: 'Edit'
                                on_release: root.edit_user(requestType="Validate")

                        RButton3:
                                size_hint: 0.3, 1
                                text: 'Delete'
                                on_release: root.delete_user(requestType="Validate")