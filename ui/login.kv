<LoginScreen>:
        GridLayout:
                rows: 3
                padding: 40
                spacing: 40
                size_hint: 1, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                background_color: 0, 0, 1, 1

                Label:
                        text: 'Log In'
                        size_hint: 1, 0.1
                        font_size: 30
                        color: 1, 1, 1, 1
                        bold: True

                GridLayout:
                        cols: 2
                        rows: 2
                        spacing: 30
                        padding: 40
                        size_hint: 0.5, 0.5

                        Label:
                                text: 'Email'
                                size_hint: 0.3, 0.1
                                font_size: 30
                                color: 1, 1, 1, 1
                                bold: True

                        TextInput:
                                id: email
                                size_hint: 0.5, 0.1
                                font_size: 40
                                multiline: False

                        Label:
                                text: 'Password'
                                size_hint: 0.3, 0.1
                                font_size: 30
                                color: 1, 1, 1, 1
                                bold: True

                        TextInput:
                                id: password
                                size_hint: 0.5, 0.1
                                font_size: 40
                                multiline: False
                                password: True

                GridLayout:
                        cols: 2
                        rows: 1
                        spacing: 40
                        padding: 40
                        size_hint: 1, 0.2

                        Button:
                                text: 'Exit'
                                size_hint: 0.1, 0.1
                                font_size: 20
                                background_color: 0, 0, 1, 1
                                on_release: app.stop()

                        Button:
                                text: 'Log In'
                                size_hint: 0.1, 0.1
                                font_size: 20
                                background_color: 0, 0, 1, 1
                                on_release: root.login(email.text, password.text)