<MainScreen>:
        GridLayout:
                rows: 5
                cols: 1
                padding: 20
                spacing: 10

                GridLayout:
                        size_hint: 1, 0.1
                        rows: 1
                        cols: 2
                        CLabel:
                                text: 'Project Management System'
                                size_hint: 0.8, 1
                                font_size: '40sp'
                                bold: True

                        GridLayout:
                                rows: 2
                                size_hint: 0.2, 1
                                RButton3:
                                        id: logBtn
                                        size_hint: 0.1, 0.5
                                        text: 'LogIn'
                                        on_release: root.btn_click(self)
                                CLabel:
                                        id: logStatus
                                        size_hint: 0.1, 0.5

                CLabel:
                        text: 'Rohan Constructions'
                        font_size: '60sp'
                        size_hint: 1, 0.1

                # Empty Space in Middle
                Label:
                        size_hint: 1, 0.4

                GridLayout:
                        rows: 2
                        cols: 3
                        spacing: 30
                        padding: 30
                        size_hint: 1, 0.3

                        RButton2:
                                id: projectsBtn
                                text: 'Projects'
                                font_size: '32sp'
                                on_release:
                                        root.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        RButton2:
                                id: clientsBtn
                                text: 'Clients'
                                font_size: '32sp'
                                on_release:
                                        root.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        RButton2:
                                id: suppliersBtn
                                text: 'Suppliers'
                                font_size: '32sp'
                                on_release:
                                        root.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        RButton2:
                                id: resourcesBtn
                                text: 'Resources'
                                font_size: '32sp'
                                on_release:
                                        root.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        RButton2:
                                id: personnelBtn
                                text: 'Personnel'
                                font_size: '32sp'
                                on_release:
                                        root.btn_click(self)
                                        root.manager.transition.direction = 'left'

                        RButton2:
                                id: financesBtn
                                text: 'Finances'
                                font_size: '32sp'
                                on_release:
                                        root.btn_click(self)
                                        root.manager.transition.direction = 'left'




