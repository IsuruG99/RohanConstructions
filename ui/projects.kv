<ProjectsScreen>:
        GridLayout:
                rows: 2
                cols: 1
                padding: (20, 40, 20, 20)
                spacing: 20

                CLabel:
                        text: 'Projects'
                        size_hint: 1, 0.05
                        font_size: '30sp'
                        bold: True

                GridLayout:
                        rows: 2
                        spacing: 10
                        padding: 10
                        size_hint: 1, 0.95

                        GridLayout:
                                rows: 1
                                cols: 2
                                size_hint: 1, 0.8
                                ScrollView:
                                        size_hint: 0.95, 1
                                        do_scroll_x: False
                                        GridLayout:
                                                id: projects_list
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height

                                GridLayout:
                                        size_hint: 0.05, 1
                                        rows: 4
                                        CLabel:
                                                text: ''
                                                size_hint: 0.010, 1
                                        CButton:
                                                text: '+'
                                                size_hint: 0.0025, 1
                                                font_size: '30sp'
                                                background_color: 0, 0, 0, 0
                                                on_release: root.fontSizer(self)
                                                valign: 'bottom'
                                        CButton:
                                                text: '-'
                                                size_hint: 0.0025, 1
                                                font_size: '30sp'
                                                background_color: 0, 0, 0, 0
                                                on_release: root.fontSizer(self)
                                                valign: 'top'
                                        CLabel:
                                                text: ''
                                                size_hint: 0.010, 1

                        GridLayout:
                                rows: 1
                                cols: 3
                                spacing: 20
                                padding: 20
                                size_hint: 1, 0.2

                                CButton:
                                        id: projects_filter
                                        text: 'In Progress'
                                        size_hint: 0.3, 1
                                        on_release: root.btn_click(self)

                                CButton:
                                        text: 'Add'
                                        size_hint: 0.5, 1
                                        on_release: root.btn_click(self)

                                CButton:
                                        text: 'Back'
                                        size_hint: 0.2, 1
                                        on_release:
                                                root.manager.current = 'main'
                                                root.manager.transition.direction = 'right'

<AddPopup>:

        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 6
                        padding: 10
                        spacing: 10
                        size_hint: 1, 0.8

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_name
                                multiline: False
                                hint_text: 'Project AD'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_desc
                                multiline: False
                                hint_text: 'Project is about this.'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Start Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_start
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'End Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_end
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Client'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_client
                                multiline: False
                                hint_text: 'ABC Company'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Budget'
                                size_hint: 0.3, 0.1
                        CText:
                                id: project_budget
                                multiline: False
                                hint_text: '10000'
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 1
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton:
                                text: 'Insert'
                                on_release:
                                        root.addProj(project_name.text, project_desc.text, project_start.text, project_end.text, project_client.text, project_budget.text)
                                        project_name.text = ''
                                        project_desc.text = ''
                                        project_start.text = ''
                                        project_end.text = ''
                                        project_client.text = ''
                                        project_budget.text = ''

<ViewPopup>:
        size: 400, 600
        GridLayout:
                cols: 1
                rows: 2
                size: root.size
                pos: root.pos

                GridLayout:
                        cols: 2
                        rows: 7
                        padding: 5
                        spacing: 5
                        size_hint: 1, 0.9

                        CLabel:
                                text: 'Name'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_name
                                multiline: False
                                hint_text: 'Project AD'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Description'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_desc
                                multiline: False
                                hint_text: 'Project is about this.'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Start Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_startDate
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'End Date'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_endDate
                                multiline: False
                                hint_text: 'YYYY-MM-DD'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Client'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_client
                                multiline: False
                                hint_text: 'ABC Company'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Budget'
                                size_hint: 0.3, 0.1
                        CText:
                                id: viewPop_budget
                                multiline: False
                                hint_text: '10000'
                                size_hint: 0.7, 0.1

                        CLabel:
                                text: 'Status'
                                size_hint: 0.3, 0.1
                        CSpinner:
                                id: viewPop_status
                                font_size: '20sp'
                                text: 'In Progress'
                                values: ['In Progress', 'Completed', 'Cancelled']
                                size_hint: 0.7, 0.1

                GridLayout:
                        cols: 3
                        rows: 1
                        padding: 20
                        spacing: 20
                        size_hint: 1, 0.2

                        CButton:
                                text: 'Edit'
                                on_release:
                                        root.editProj(viewPop_name.text, viewPop_desc.text, viewPop_startDate.text, viewPop_endDate.text, viewPop_client.text, viewPop_budget.text, viewPop_status.text)

                        CButton:
                                text: 'Delete'
                                on_release:
                                        root.deleteProj()

                        CButton:
                                text: 'Report'
                                on_release: root.reports_popup()

<ReportsPopup>:
        title: 'Project Details'
        auto_dismiss: False

        GridLayout:
                size: root.size
                pos: root.pos
                cols: 1
                rows: 2
                padding: 30
                spacing: 30

                GridLayout:
                        size_hint: 1, 0.9
                        cols: 2
                        rows: 1

                        GridLayout:
                                cols: 1
                                rows: 10
                                spacing: 10
                                padding: 10

                                RLabelTop:
                                        text: 'Project ID'
                                RLabelBot:
                                        font_size: '15sp'
                                        id: proj_id

                                RLabelTop:
                                        text: 'Project Name'
                                RLabelBot:
                                        font_size: '15sp'
                                        id: proj_name

                                RLabelTop:
                                        text: 'Client'
                                RLabelBot:
                                        font_size: '15sp'
                                        id: proj_client

                                RLabelTop:
                                        text: 'Start Date'
                                RLabelBot:
                                        font_size: '15sp'
                                        id: proj_start

                                RLabelTop:
                                        text: 'End Date'
                                RLabelBot:
                                        id: proj_end
                                        font_size: '15sp'

                        GridLayout:
                                cols: 1
                                rows: 10
                                padding: 10

                                RLabelTop:
                                        text: 'Description'
                                        size_hint_y: 0.2
                                RLabelBot:
                                        id: proj_desc
                                        multiline: True
                                        size_hint_y: 0.5

                                RLabelTop:
                                        text: 'Budget'
                                        size_hint_y: 0.2
                                RLabelBot:
                                        id: proj_budget
                                        multiline: False
                                        size_hint_y: 0.5

                                RLabelTop:
                                        text: 'Assigned Members'
                                        size_hint_y: 0.2
                                ScrollView:
                                        GridLayout:
                                                id: assigned_manpower
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                scroll_type: ['bars', 'content']
                                                bar_width: 10
                                                bar_color: 1, 0, 0, 1  # RGBA for the scrollbar color
                                                bar_inactive_color: 0.5, 0.5, 0.5, 1  # RGBA for the scrollbar's inactive color

                                RLabelTop:
                                        text: 'Assigned Resources'
                                        size_hint_y: 0.2
                                ScrollView:
                                        GridLayout:
                                                id: assigned_resources
                                                cols: 1
                                                size_hint_y: None
                                                height: self.minimum_height
                                                scroll_type: ['bars', 'content']
                                                bar_width: 10
                                                bar_color: 1, 0, 0, 1  # RGBA for the scrollbar color
                                                bar_inactive_color: 0.5, 0.5, 0.5, 1  # RGBA for the scrollbar's inactive color

                GridLayout:
                        size_hint: 1, 0.1
                        cols: 1
                        rows: 1

                        CButton:
                                text: 'Back'
                                on_release: root.dismiss_popup(root.popup)